<div class="flash">
	<%= flash[:success] %>
</div>
<h2>Books</h2>

<table>
	<thead>
	 <tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
</thead>

<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book) %></td>
		<td><%= link_to "Edit", edit_book_path(book) %></td>
		<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>
</tbody>
</table>

<h3 class="title">New book</h3>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	<% end %>
	<h4 class="sub-title">Title</h4>
	<%= f.text_field :title %>
	<h4 class="sub-title">Body</h4>
	<%= f.text_field :body %>
	<br>
	<div class="submit"><%= f.submit 'Create Book' %>
	</div>
	<% end %>